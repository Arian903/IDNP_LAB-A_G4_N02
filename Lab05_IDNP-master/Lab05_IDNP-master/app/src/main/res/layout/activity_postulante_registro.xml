<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity"
    tools:context=".PostulanteRegistroActivity">



    <TextView
        android:id="@+id/Inscripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_centerHorizontal="true"
        android:text="INSCRIPCIÃ“N POSTULANTE"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txtNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="54dp"
        android:layout_below="@id/Inscripcion"
        android:text="Nombres"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/txtApePat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txtNom"
        android:text="Apellido Paterno"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/txtApeMat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Apellido Materno"
        android:textColor="@color/textColor"
        android:layout_below="@id/txtApePat"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/txtFecNac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Fecha de Nac."
        android:layout_below="@id/txtDni"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/txtCole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Colegio"
        android:textColor="@color/textColor"
        android:layout_below="@id/txtFecNac"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/txtCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="Carrera"
        android:layout_below="@id/txtCole"
        android:textColor="@color/textColor"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/txtDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txtApeMat"
        android:text="DNI"
        android:textColor="@color/textColor"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtNom"
        />

    <EditText
        android:id="@+id/edtApePat"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtApePat"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/edtApeMat"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtApeMat"
         />

    <EditText
        android:id="@+id/edtDni"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtDni"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/edtFecNac"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtFecNac"
        android:ems="10"
        android:inputType="textPersonName"
         />
    <EditText
        android:id="@+id/edtCole"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtCole"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/edtCar"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="255dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtCar"
        android:ems="10"
        android:inputType="textPersonName"
        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="147dp"
        android:background="@drawable/shape_button"
        android:text="Registrar"
        android:layout_below="@id/txtCar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"
         />

</RelativeLayout>